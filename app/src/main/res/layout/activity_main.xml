<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/font"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/aldrich"
        android:text="Random Number generator"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textSize="60sp"
        android:id="@+id/resultB"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginTop="100sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215sp"
        android:text="Range:"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="@font/aldrich"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_input_one"
        android:hint="1 number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_input_two"
        android:hint="2 number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/button_gen"
        android:layout_width="230sp"
        android:layout_height="100sp"
        android:layout_marginTop="500sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg"
        android:text="generate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="200sp"
        android:layout_height="30sp"
        android:layout_marginTop="450dp"
        android:background="@color/black"
        android:text="copy random number"
        android:textColor="@color/white"
        android:id="@+id/btn_pyco"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>